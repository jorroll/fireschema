{
  "name": "fireschema",
  "version": "1.0.2",
  "repository": "github:yarnaimo/fireschema",
  "license": "MIT",
  "author": "yamaimo <yarnaimo@gmail.com>",
  "main": "dist/index.js",
  "bin": "dist/bin/cli.js",
  "scripts": {
    "build": "ttsc && chmod +x dist/bin/cli.js",
    "debug": "node --inspect -r ts-node/register",
    "dev": "yarn ts-node src/index.ts",
    "emulators:exec": "firebase emulators:exec --only firestore,functions,pubsub",
    "fireschema:rules": "./dist/bin/cli.js src/example/schema-example.ts",
    "lint": "eslint --ignore-path .gitignore '**/*.{js,jsx,ts,tsx}'",
    "prepare": "rm -rf dist && yarn build && ./append-emulator-proxyer.sh",
    "serve": "yarn build && firebase emulators:start --only firestore,functions,pubsub",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "NODE_ENV=test jest --no-cache",
    "ts-node": "ts-node --compiler ttypescript"
  },
  "resolutions": {
    "ts-morph/**/typescript": "^4.1.1-rc"
  },
  "dependencies": {
    "@sindresorhus/is": "^3.1.2",
    "dayjs": "^1.8.35",
    "lifts": "^0.1.4",
    "react-firebase-hooks": "^2.2.0",
    "remeda": "^0.0.22",
    "runtypes": "^5.0.1",
    "ts-morph": "^8.1.0",
    "ttypescript": "^1.5.12",
    "type-fest": "^0.16.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@firebase/testing": "^0.20.11",
    "@google-cloud/pubsub": "^2.5.0",
    "@sindresorhus/tsconfig": "^0.7.0",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.13",
    "@types/prettier": "^2.1.1",
    "@types/react": "^16.9.49",
    "@types/testing-library__react-hooks": "^3.4.0",
    "@yarnaimo/eslint-config": "^0.1.5",
    "express": "^4.17.1",
    "firebase": "^7.20.0",
    "firebase-admin": "^9.1.1",
    "firebase-functions": "^3.11.0",
    "firebase-tools": "^8.10.0",
    "got": "^11.6.2",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "sort-package-json": "^1.44.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tsd": "^0.13.1",
    "typescript": "^4.1.1-rc"
  },
  "peerDependencies": {
    "@google-cloud/pubsub": "^2.5.0",
    "firebase": "^7.20.0",
    "firebase-admin": "^9.1.1",
    "firebase-functions": "^3.11.0"
  },
  "engines": {
    "node": "12"
  }
}
