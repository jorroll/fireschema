{
  "name": "fireschema",
  "version": "5.0.0-19",
  "repository": "github:yarnaimo/fireschema",
  "license": "MIT",
  "author": "yamaimo <yarnaimo@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "node": {
        "import": "./esm/index.js",
        "require": "./dist/index.cjs"
      },
      "default": "./esm/index.js"
    },
    "./admin": {
      "node": {
        "import": "./esm/admin/index.js",
        "require": "./dist/admin/index.cjs"
      },
      "default": "./esm/admin/index.js"
    },
    "./hooks": {
      "node": {
        "import": "./esm/hooks/index.js",
        "require": "./dist/hooks/index.cjs"
      },
      "default": "./esm/hooks/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./esm/index.d.ts",
  "bin": "./esm/bin/main.js",
  "scripts": {
    "build": "tsc -P tsconfig.cjs.json && cp src/lib/*.d.ts dist/lib/ && renamer --silent --force --find js --replace cjs 'dist/**' && ./scripts/after-build-cjs.sh",
    "build:esm": "tsc && cp src/lib/*.d.ts esm/lib/ && ./scripts/after-build-esm.sh",
    "debug": "node --inspect -r ts-node/register",
    "docs": "./scripts/update-docs.sh",
    "firestore:rules": "TS_NODE_PROJECT=tsconfig.cjs.json ./esm/bin/main.js rules src/example/1-1-schema.ts",
    "functions:export": "TS_NODE_PROJECT=tsconfig.cjs.json ./esm/bin/main.js export src/__tests__/_functions",
    "lint": "eslint --ignore-path .gitignore '**/*.{js,jsx,ts,tsx}'",
    "prepare": "./scripts/append-emulator-proxyer.sh",
    "serve": "yarn build && firebase emulators:start --only firestore,functions,pubsub",
    "test": "NODE_ENV=test jest --coverage false",
    "test:main": "firebase emulators:exec --only firestore 'yarn test --testPathIgnorePatterns /node_modules/ /dist/ /esm/ /functions/'",
    "test:functions": "yarn build:esm && firebase emulators:exec --only firestore,functions,pubsub 'yarn test /functions/'",
    "test:all": "yarn test:main && yarn test:functions",
    "ts-node": "ts-node -P tsconfig.cjs.json",
    "ts-node:esm": "node --loader ts-node/esm --experimental-repl-await",
    "version": "rm -rf dist esm && yarn build && yarn build:esm"
  },
  "dependencies": {
    "@sindresorhus/is": "^4.0.1",
    "@yarnaimo/type-extends": "^0.0.1",
    "dayjs": "^1.10.6",
    "getopts": "^2.3.0",
    "lifts": "^0.1.4",
    "react-firebase-hooks": "^3.0.4",
    "remeda": "^0.0.30",
    "type-fest": "^2.2.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@google-cloud/pubsub": "^2.17.0",
    "@sindresorhus/tsconfig": "^1.0.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/express": "4.17.13",
    "@types/jest": "^27.0.1",
    "@types/prettier": "^2.3.2",
    "@types/react": "^17.0.20",
    "@types/testing-library__react-hooks": "^4.0.0",
    "@yarnaimo/eslint-config": "^0.2.3",
    "enhanced-resolve": "^5.8.2",
    "express": "^4.17.1",
    "firebase": "9.0.1",
    "firebase-admin": "^9.100.0-alpha.1",
    "firebase-functions": "^3.15.5",
    "firebase-functions-test": "^0.3.2",
    "firebase-tools": "^9.18.0",
    "got": "^11.8.2",
    "jest": "^27.1.1",
    "markdown-magic": "^2.5.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "renamer": "^4.0.0",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsd": "^0.17.0",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "@google-cloud/pubsub": "^2.17.0",
    "firebase": "9.0.1",
    "firebase-admin": "^9.100.0-alpha.1",
    "firebase-functions": "^3.15.5"
  },
  "engines": {
    "node": ">=12"
  }
}
