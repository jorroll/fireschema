{
  "name": "fireschema",
  "version": "5.0.0-12",
  "repository": "github:yarnaimo/fireschema",
  "license": "MIT",
  "author": "yamaimo <yarnaimo@gmail.com>",
  "exports": {
    ".": {
      "node": {
        "import": "./esm/index.mjs",
        "require": "./dist/index.js"
      },
      "default": "./esm/index.mjs"
    },
    "./admin": {
      "node": {
        "import": "./esm/admin/index.mjs",
        "require": "./dist/admin/index.js"
      },
      "default": "./esm/admin/index.mjs"
    },
    "./hooks": {
      "node": {
        "import": "./esm/hooks/index.mjs",
        "require": "./dist/hooks/index.js"
      },
      "default": "./esm/hooks/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "bin": "./esm/bin/main.mjs",
  "scripts": {
    "build": "tsc -P tsconfig.cjs.json && cp src/lib/*.d.ts dist/lib/",
    "build:esm": "tsc && cp src/lib/*.d.ts esm/lib/ && ./scripts/after-build-esm.sh",
    "debug": "node --inspect -r ts-node/register",
    "docs": "md-magic && sed -i -e \"s/ from '\\.\\./ from 'fireschema/g\" README.md && prettier --write README.md",
    "firestore:rules": "TS_NODE_PROJECT=tsconfig.cjs.json ./esm/bin/main.mjs rules src/example/1-1-schema.ts",
    "functions:export": "TS_NODE_PROJECT=tsconfig.cjs.json ./esm/bin/main.mjs export src/__tests__/_functions",
    "lint": "eslint --ignore-path .gitignore '**/*.{js,jsx,ts,tsx}'",
    "prepare": "./scripts/append-emulator-proxyer.sh && ./scripts/firebase-testing-compat.sh",
    "serve": "yarn build && firebase emulators:start --only firestore,functions,pubsub",
    "test": "NODE_ENV=test jest --no-cache",
    "test:main": "firebase emulators:exec --only firestore 'yarn test --testPathIgnorePatterns /node_modules/ /dist/ /esm/ /functions/'",
    "test:functions": "firebase emulators:exec --only firestore,functions,pubsub 'yarn test /functions/'",
    "test:all": "yarn test:main && yarn test:functions",
    "ts-node": "ts-node -P tsconfig.cjs.json ",
    "ts-node:esm": "node --loader ts-node/esm --experimental-specifier-resolution=node",
    "version": "rm -rf dist esm && yarn build && yarn build:esm"
  },
  "resolutions": {
    "@firebase/rules-unit-testing/firebase": "^9.0.0-beta.8",
    "@firebase/rules-unit-testing/firebase-admin": "^9.100.0-alpha.1"
  },
  "dependencies": {
    "@sindresorhus/is": "^4.0.1",
    "@yarnaimo/type-extends": "^0.0.1",
    "dayjs": "^1.10.6",
    "getopts": "^2.3.0",
    "lifts": "^0.1.4",
    "react-firebase-hooks": "^3.0.4",
    "remeda": "^0.0.28",
    "type-fest": "^1.2.2"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@firebase/rules-unit-testing": "^1.3.13",
    "@google-cloud/pubsub": "^2.16.0",
    "@sindresorhus/tsconfig": "^1.0.2",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/express": "4.17.13",
    "@types/jest": "^26.0.24",
    "@types/prettier": "^2.3.2",
    "@types/react": "^17.0.14",
    "@types/testing-library__react-hooks": "^4.0.0",
    "@yarnaimo/eslint-config": "^0.2.3",
    "enhanced-resolve": "^5.8.2",
    "express": "^4.17.1",
    "firebase": "^9.0.0-beta.8",
    "firebase-admin": "^9.100.0-alpha.1",
    "firebase-functions": "^3.14.1",
    "firebase-functions-test": "^0.3.0",
    "firebase-tools": "^9.16.0",
    "got": "^11.8.2",
    "jest": "^27.0.6",
    "markdown-magic": "^2.3.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "renamer": "^3.2.1",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "tsd": "^0.17.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "@google-cloud/pubsub": "^2.16.0",
    "firebase": "^9.0.0-beta.8",
    "firebase-admin": "^9.100.0-alpha.1",
    "firebase-functions": "^3.14.1"
  },
  "engines": {
    "node": ">=12"
  }
}
