{
  "name": "fireschema",
  "version": "2.2.1",
  "repository": "github:yarnaimo/fireschema",
  "license": "MIT",
  "author": "yamaimo <yarnaimo@gmail.com>",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "bin": "dist/bin/cli.js",
  "scripts": {
    "build": "ttsc && chmod +x dist/bin/cli.js",
    "build:esm": "ttsc -P tsconfig.esm.json",
    "debug": "node --inspect -r ts-node/register",
    "dev": "yarn ts-node src/index.ts",
    "docs": "md-magic && sed -i -e \"s/ from '\\.\\./ from 'fireschema/g\" README.md",
    "emulators:exec": "firebase emulators:exec --only firestore,functions,pubsub",
    "fireschema:rules": "./dist/bin/cli.js src/example/schema-example.ts",
    "lint": "eslint --ignore-path .gitignore '**/*.{js,jsx,ts,tsx}'",
    "prepare": "./append-emulator-proxyer.sh",
    "serve": "yarn build && firebase emulators:start --only firestore,functions,pubsub",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "NODE_ENV=test jest --no-cache",
    "ts-node": "ts-node --compiler ttypescript",
    "version": "rm -rf dist esm && yarn build && yarn build:esm"
  },
  "resolutions": {
    "ts-morph/**/typescript": "^4.1.2"
  },
  "dependencies": {
    "@sindresorhus/is": "^4.0.0",
    "dayjs": "^1.9.6",
    "lifts": "^0.1.4",
    "react-firebase-hooks": "^2.2.0",
    "remeda": "^0.0.27",
    "runtypes": "^5.0.1",
    "ts-morph": "^8.2.0",
    "ttypescript": "^1.5.12",
    "type-fest": "^0.19.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@firebase/rules-unit-testing": "^1.1.3",
    "@google-cloud/pubsub": "^2.6.0",
    "@sindresorhus/tsconfig": "^0.7.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/prettier": "^2.1.5",
    "@types/react": "^16.9.56",
    "@types/testing-library__react-hooks": "^3.4.1",
    "@yarnaimo/eslint-config": "^0.1.6",
    "express": "^4.17.1",
    "firebase": "^8.1.1",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.11.0",
    "firebase-functions-test": "^0.2.3",
    "firebase-tools": "^8.16.2",
    "got": "^11.8.0",
    "jest": "^26.6.3",
    "markdown-magic": "^1.0.0",
    "prettier": "^2.2.0",
    "react": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "sort-package-json": "^1.47.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsd": "^0.13.1",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "@google-cloud/pubsub": "^2.6.0",
    "firebase": "^8.1.1",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.11.0"
  },
  "engines": {
    "node": "12"
  }
}
