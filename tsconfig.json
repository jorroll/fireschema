{
  "extends": "@yarnaimo/tss/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "es2019"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/@types/*", "src/@types/*"]
    },
    "types": ["@types/node", "@types/jest"],
    "plugins": [
      {
        "transform": "./src/_transformer/main.ts"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
